{
    "configurations": [
        {
            "type": "command",
            "name": "compile",
            "program": "compiledb",
            "args": ["make", "build"]
        },
        {
            "type": "command",
            "name": "run",
            "dependsOn": ["compile"],
            "program": "./snake_graph"
        },
        {
            "type": "command",
            "name": "clean",
            "program": "make",
            "args": ["clean"]
        },
        {
            "type": "command",
            "name": "valgrind",
            "dependsOn": ["compile"],
            "program": "valgrind",
            "args": ["--leak-check=full", "--show-leak-kinds=all", "--track-origins=yes", "./snake_graph"]
        },

    ]
}